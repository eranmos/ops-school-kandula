---
- name: apply consul_registrator on my jenkins-master & jenkins-slave servers
  hosts: tag_Name_jenkins_slave
  become: yes

  tasks:
    - name: consul_registrator
      docker_container:
        name: consul_registrator
        image: gliderlabs/registrator
        pull: true
        volumes:
          - /var/run/docker.sock:/tmp/docker.sock
        command: "consul://localhost:8500"
        privileged: true


